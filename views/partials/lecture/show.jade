.modal-header
    h1 Lecture {{lecture.title}}

.modal-body
    div()
        table.table.table-bordered
            tbody(data-ng-switch on="lecture.status")
                tr
                td Lecture Title
                td
                   | {{lecture.title}}
                tr
                td Description
                td
                   | {{lecture.description}}
                tr
                td Date
                td
                   | {{lecture.date}}
                tr
                td Live/VOD
                td
                   p(data-ng-switch-when="1")
                       | Live
                   p(data-ng-switch-when="0")
                       | VoD
                tr(data-ng-switch-when="0")
                   td VOD URL
                   td {{lecture.vod_url}}    
.modal-footer
    .well(data-ng-controller="CourseItemCtrl", data-ng-switch on="lecture.status")
        a.btn.btn-warning(data-ng-click="launchEdit()", data-course-access-level='courseAccessLevels.tutor')
             i.icon-edit.icon-white Edit
        a.btn.btn-danger(type='submit', data-ng-click='deleteLecture()', data-course-access-level='courseAccessLevels.tutor')
             i.icon-remove.icon-white Delete
        a.btn.btn-primary(data-ng-click="startLecture()", data-course-access-level='courseAccessLevels.tutor', data-ng-switch-when="1")
             i.icon-edit.icon-white Start Lecture
        a.btn.btn-success(data-ng-click="view()")
             i.icon-edit.icon-white View
             