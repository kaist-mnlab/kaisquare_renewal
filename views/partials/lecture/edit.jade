form(role="form", data-ng-submit="updateLecture()")
    .form-group
        label(for="lectureTitle") Title
        input#lectureTitle.form-control(type="text", data-ng-model="lecture.title", value='{{lecture.title}}')
    .form-group
        label(for="lectureDescription") Description
        input#lectureDescription.form-control(type="text", data-ng-model="lecture.description",  value='{{lecture.description}}')
    
    .form-group
        label(for="lectureStatus") Live/VOD
        input#lectureStatus.form-control(type="checkbox", data-ng-model="lecture.status",  value='{{lecture.status}}')
    .row
        .col-xs-6
            a.btn.btn-default(href="/courses/course/{{course._id}}", role="button")
                span.glyphicon.glyphicon-arrow-left Back to Course
        .col-xs-6
            button.btn.btn-primary.pull-right(type="submit") Update Course !
             