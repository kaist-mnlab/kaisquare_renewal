.modal-header
     h1 New Course

form(role="form", data-ng-submit="createCourse()")
    .modal-body 
        .form-group
            label(for="courseTitle") Title
            input#courseTitle.form-control(type="text", data-ng-model="course.title", placeholder="Enter course title", required)
        .form-group
            label(for="courseAbstract") Abstract
            input#courseAbstract.form-control(type="text", data-ng-model="course.abstract", placeholder="Enter course abstract", required)
        .form-group
            label(for="courseDescription") Description
            input#courseDescription.form-control(type="text", data-ng-model="course.description", placeholder="Enter course description", required)
        .form-group
            label(for="courseTutor") Course Instructor :
            label(for="courseTutor") {{user.username}}
            input#courseTutor.form-control(type="hidden",  value ="{{user}}")
        
        .form-group
            label(for="courseHidden") Open
            input#courseHidden.form-control(type="checkbox", data-ng-model="course.hidden")
 

    .modal-footer 
        .row
            .col-xs-6
                button.btn.btn-danger(type="button", data-ng-click="cancel()")
                    | Cancel
            .col-xs-6
                button.btn.btn-primary.pull-right(type="submit") Create Course !
             