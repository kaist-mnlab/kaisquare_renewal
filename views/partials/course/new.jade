ul.breadcrumb
    li
       a(href='/') Home
       span.divider /
    li
       != linkTo('posts', pathTo.posts())
       span.divider /
    li.active
       a(href='#') New post

.page-header
  h1 New post

- var form = formFor(post, {action: pathTo.posts(), method: 'POST', id: "post_form", class: 'form-horizontal'})

!= form.begin()
include _form
.form-actions
  != form.submit('<i class="icon-ok icon-white"></i>  Create post', {class: 'btn btn-primary'})
  span= ' or '
  != linkTo('Cancel', pathTo.posts(), {class: 'btn'})
!= form.end()
