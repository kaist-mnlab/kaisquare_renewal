ul.breadcrumb
    li
       a(href='/courses') Courses
       span.divider /
    li.active
       a(href='#') New course
.page-header
  h1 New course

form(role="form", data-ng-submit="createCourse()")
    .form-group
        label(for="courseTitle") Title
        input#courseTitle.form-control(type="text", data-ng-model="course.title", placeholder="Enter course title")
    .form-group
        label(for="courseAbstract") Abstract
        input#courseAbstract.form-control(type="text", data-ng-model="course.abstract", placeholder="Enter course abstract")
        .form-group
        label(for="courseDescription") Description
        input#courseDescription.form-control(type="text", data-ng-model="course.description", placeholder="Enter course description")
    .form-group
        label(for="courseTutor") Course Instructor :
        label(for="courseTutor") {{user.username}}
        input#courseTutor.form-control(type="hidden",  value ="{{user}}")
        
    .form-group
        label(for="courseHidden") Open
        input#courseHidden.form-control(type="checkbox", data-ng-model="course.hidden")
 

 
    .row
        .col-xs-6
            a.btn.btn-default(href="/courses", role="button")
                span.glyphicon.glyphicon-arrow-left Back to Course List
        .col-xs-6
            button.btn.btn-primary.pull-right(type="submit") Create Course !
             